<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ImageCompressor.Views.ConfigWindow"
        Title="ConfigWindow"
		xmlns:vm="using:ImageCompressor.ViewModels"
		x:DataType="vm:ConfigVM">
	<Grid RowDefinitions="auto,auto,auto,auto,auto" ColumnDefinitions="auto,*">
		<TextBlock Text="Format"/>
	    <ComboBox Width="100" Grid.Column="1" x:Name="FormatButton" SelectedItem="{Binding Format}"/>
		<TextBlock Grid.Row="1" Text="Quality"/>
		<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Quality}"/>
		<TextBlock Grid.Row="2" Text="Default Commandline Action Type"/>
		<ComboBox Width="300" Grid.Row="2" Grid.Column="1" x:Name="ActionTypeButton" SelectedItem="{Binding ActionType}"/>
		<TextBlock Grid.Row="3" Text="Always Save Compression Result"/>
		<CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding AlwaysSave}"/>
		<Button Grid.Row="4" Grid.Column="1" Content="Apply" Command="{Binding ApplyCmd}"/>
	</Grid>
</Window>
